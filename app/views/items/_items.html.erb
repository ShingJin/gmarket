<div id="tags">
<% @categories.each do |category| %>


     <% if category.id==1 %>
     <div class="category_tag all_tag">
     <% elsif category.id==2 %>
     <div class="category_tag all_tag" style="background-color:#F09D0B">
	 <% elsif category.id==3 %>
     <div class="category_tag all_tag" style="background-color:skyblue">
	 <% elsif category.id==4 %>
     <div class="category_tag all_tag" style="background-color:#8FC700">
	 <% else %>
     <div class="category_tag all_tag" style="background-color:#508600">
     <% end %>
	<%= link_to "All "+category.name.titleize,category %>
	</div>

<% end %>
</div>


<table class="main_table">  
   <tr style="border-bottom: 1px dotted #999999;">  
     <th style="text-align:center"><%= sortable "category_id" %></th>  
     <th><%= sortable "name" %></th> 
     <th><%= sortable "price" %></th>
     <th><%= sortable "bs","B/S" %></th>
     <th><%= sortable "created_at","Date" %></th>
   </tr>  
   <%= render :partial=>"shared/item", :object=>@items %>
</table> 