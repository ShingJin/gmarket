  <div id="tags">
<% @categories.each do |category| %>


     <% if category.id==1 %>
     <div class="category_tag all_tag">
     <% elsif category.id==2 %>
     <div class="category_tag all_tag" style="background-color:#F09D0B">
	 <% elsif category.id==3 %>
     <div class="category_tag all_tag" style="background-color:skyblue">
	 <% elsif category.id==4 %>
     <div class="category_tag all_tag" style="background-color:#8FC700">
	 <% else %>
     <div class="category_tag all_tag" style="background-color:#508600">
     <% end %>
	<%= link_to "All "+category.name.titleize,category %>
	</div>

<% end %>
</div>


  <%= form_tag items_path, :method => 'get' do %>  
		 <%= hidden_field_tag :direction, params[:direction] %>  
	     <%= hidden_field_tag :sort, params[:sort] %>      
      
      <div class="search_bar">
      <table width="100%" cellspacing="0" cellpadding="0" class="padfix">
	  <tbody><tr>
      <td width="100" style="text-align: right;" class="padfix">
      <div style="margin-top:14px;">
      <h2 style="color:#00516E">I want to</h2>
      <div>
      </td>
	  <td width="150">
	
      <div>
      	<%=  select_tag :bs, raw("<option value='f'>Buy</option><option value='t'>Sell</option>"), :class=>"select_box"%>
        <%= text_field_tag :search, params[:search], :class=>"word_box" %>  
        <%= submit_tag "Go", :name => nil, :class=>"button white" %>  
      </div>
      
      </td>
      </tr>
      </tbody></table>
	  </div>
      
   <% end %>  
