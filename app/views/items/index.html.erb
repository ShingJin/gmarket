   <%= form_tag items_path, :method => 'get' do %>  
		 <%= hidden_field_tag :direction, params[:direction] %>  
	     <%= hidden_field_tag :sort, params[:sort] %>      
      <p>
      	I want to
      	<%=  select_tag :bs, raw("<option value='t'>Buy</option><option value='f'>Sell</option>")%>
        <%= text_field_tag :search, params[:search] %>  
        <%= submit_tag "Go", :name => nil %>  
      </p>  
   <% end %>  
<div id="items">
		<% if @items.count != 0 %>
			<%= render 'items' %>
		<% else %>
			<% if params[:bs]=='t' %>
			<p>Opps, we didn't find what you are looking for, try <%= link_to "post a new buying request",'/new_sell' %></p>
			<% else %>
			<p>Opps, we didn't find what you are looking for, try <%= link_to "post a new selling request",'/new_buy' %></p>
			<% end %>			
		<% end %>
</div>  
  
