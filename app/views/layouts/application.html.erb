<!DOCTYPE html>
<html>
<head>
  <title>Grinnnell College Marketplace</title>
	<%= render 'layouts/stylesheets' %>
  <%= stylesheet_link_tag 'jquery.notifyBar' %>
  <%= javascript_include_tag :defaults %>
<%= javascript_include_tag 'jquery.notifyBar' %>

  <%= csrf_meta_tag %>
	         
 	 


    
</head>
<body>
<div id="header">
	<div id="holder">
  	<div id="user_nav">  
  <%= link_to "Home",'/', :class=>"nav_button" %>
     <% if current_user %>  
  <%= link_to "Contact", edit_user_path(current_user), :class=>"nav_button"%>
  <% end %>
   <% if current_user %>  
     Welcome, <%= current_user.name %>!  
     <%= link_to "Sign Out", signout_path %>  
